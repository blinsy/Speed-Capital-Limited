<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ads"
        android:scaleType="fitXY"
        android:id="@+id/ivAdImage"
        android:layout_height="192dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlHeader"
        android:background="@drawable/gradient"
        android:layout_height="192dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:text="@string/client_slogan_description"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tvClientSloganDescription"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="@string/client_slogan"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/tvClientSlogan"
            android:layout_alignLeft="@id/tvClientSloganDescription"
            android:layout_above="@id/tvClientSloganDescription"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvClientSloganDescription" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtThnks"
        android:text="Thank you for joining our Speed Capital."
        android:layout_below="@+id/ivAdImage"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"

        android:textColor="@color/colorGreySubHeader"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/txtbelow"
        android:gravity="center"
        android:layout_below="@+id/txtThnks"
        android:text="@string/select_LPO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtLOP"
        android:layout_below="@+id/txtbelow"
        android:hint="@string/enter_lpo_number_hint"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/edtbranch"
        android:layout_below="@+id/edtLOP"
        android:hint="Enter Branch Name"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_alignParentBottom="true"
        android:text="SUBMIT"
        android:background="@color/red"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passclientname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/edtbranch"
     />
    <ImageView
        android:id="@+id/passimage"
        android:layout_below="@id/passclientname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
